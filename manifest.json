{
  "name": "RTT smartUp",
  "description": "RTT okosító plugin",
  "version": "0.2",
  "manifest_version": 2,
  "author": "Varga Márk",
  "permissions": ["declarativeContent", "storage"],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://rtt.dolphio.hu/*"],
      "js": ["/js/jquery-3.4.1.min.js", "/js/script.js"]
    }
  ],
  "update_url": "https://raw.githubusercontent.com/Ak47Mark/RTT-smartUp/master/updates.xml",
  "options_page": "/pages/options.html",
  "page_action": {
    "default_popup": "/pages/window.html",
    "default_icon": {
      "16": "/images/RTT_logo_16.png",
      "32": "/images/RTT_logo_32.png",
      "64": "/images/RTT_logo_64.png"
    }
  },
  "icons": {
    "16": "/images/RTT_logo_16.png",
    "32": "/images/RTT_logo_32.png",
    "64": "/images/RTT_logo_64.png"
  }
}